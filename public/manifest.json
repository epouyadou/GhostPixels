{
  "manifest_version": 3,
  "name": "Ghost Pixels",
  "version": "1.0.0",
  "description": "A Chrome extension for wplace.live that adds ghost pixels to the canvas, to help users paint their masterpieces.",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/create_overlay.js"],
      "matches": ["https://wplace.live/*"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["main.js", "asset/main.css"],
      "matches": ["https://wplace.live/*"]
    }
  ],
  "permissions": ["activeTab", "storage"]
}
